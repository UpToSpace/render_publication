<div class="form-part list">
    <div class="list-container">
        {{> contactsBtn}}
    </div>
    <form id="form-update">
        <div class="form-part data">
            <input name="id" value="{{contact.id}}" style="display: none">
            <input type="text" name="fullName" value="{{contact.fullName}}" placeholder="ФИО" required>
            <input type="tel" name="phoneNumber" value="{{contact.phoneNumber}}" placeholder="3753753" pattern="[0-9]{7}" title="7numbers" required autocomplete="off">
        </div>
        <div class="form-part control" style="margin-top: 5px;">
            <button id="update" type="submit">Изменить</button>
            <button id="delete" disabled="true">Удалить</button>
            <button type="button" onclick="{{refuse}}">Отказаться</button>
        </div>
    </form>
</div>